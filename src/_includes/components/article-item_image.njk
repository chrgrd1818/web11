{% set _title = post.data.title %}
{% set _link = post.url | url %}
{% set _time = post.date | localeDate(locale) %}
{% set _desc = post.data.description %}
{% set _caty = post.data.category %}
{% set _img = "/_static/img/placeholder-1.png" %}
{% set _imgalt = "blog-placeholder-img" %}
{% set _vues = _title.length + 10 * _link.length %}


<article>
    <div class="h-full bg-white border-2 border-gray-100 border-double rounded-lg overflow-hidden">
        <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{ _img }}" alt="{{ _imgalt }}">
        <div class="p-6">
            {% if _caty %}
            <h3 class="tracking-widest text-sm font-medium text-yellow-600 mb-2">
                <a href="/{{base}}/{{ _caty | slug }}/">
                {{ _caty | upper }}
                </a>
            </h3>
            {% endif %}
            <h2 class="font-serif text-3xl font-medium text-gray-800 mb-4">
                    <a href="{{ _link }}">{{ _title }}</a>
            </h2>
            {% if _desc %}
            <p class="font-light text-lg text-gray-700 mb-4">{{ _desc }}</p>
            {% endif %}
            <div class="flex items-center flex-wrap ">
                <a  href="{{ _link }}" class="font-medium text-blue-900 hover:text-blue-400 inline-flex items-center md:mb-2 lg:mb-0">{{ __Readmore }}
                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 12h14"></path>
                        <path d="M12 5l7 7-7 7"></path>
                    </svg>
                </a>
                <span class="text-gray-600 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm py-1">
                    <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg><span class="vues">{{ _vues }}</span>
                </span>
                
            </div>
        </div>
    </div>
</article>
